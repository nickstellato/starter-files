  "devDependencies": {
    "autoprefixer": "^9.3.1",
    "browser-sync": "^2.26.3",
    "node-sass": "^4.10.0",
    "nodemon": "^1.18.6",
    "onchange": "^5.1.0",
    "postcss-cli": "^6.0.1"
  },
  "dependencies": {}
}
