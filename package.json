{
  "name": "theme",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist/",
    "serve": "live-server --open=dist",
    "build:css": "node-sass src/scss -o dist/",
    "build:html": "cp src/*.html dist/",
    "build": "npm-run-all build:*",
    "watch:html": "onchange 'src/*.html' -- npm run build:html",
    "watch:css": "onchange 'src/scss/*.scss' -- npm run build:css",
    "watch": "npm-run-all watch:*",
    "dev": "npm-run-all clean build serve watch"
  },
  "author": "Nick Stellato",
  "license": "ISC",
  "devDependencies": {
    "live-server": "^1.2.0",
    "node-sass": "^4.10.0",
    "npm-run-all": "^4.1.3",
    "onchange": "^5.1.0"
  }
}
